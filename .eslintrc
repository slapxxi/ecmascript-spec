{
  "extends": "airbnb",
  "parser": "babel-eslint",

  "plugins": [
    "mocha",
    "jsx-a11y",
  ],

  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": false, "peerDependencies": false}],
    "no-use-before-define": ["error", { "functions": false }],
    "no-shadow": [0],
  },

  "globals": {
    "it": true,
    "describe": true,
    "window": true,
    "document": true,
  },
}
